{
  "manifest_version": 2,
  "name": "PickyJSON",
  "short_name": "PickyJSON",
  "version": "${version}",
  "description": "Quick access to PickyJSON.com.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/main.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "icons": {
    "128": "./img/icon.png"
  },
  "homepage_url"      : "https://github.com/corysimmons/picky.json/tree/gh-pages"
}